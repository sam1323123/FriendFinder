# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'FriendFinder' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for FriendFinder
  
  #Database
  pod 'Firebase/Core'

  #Maps
  pod 'Mapbox-iOS-SDK', '~> 3.6'
  pod 'MapboxGeocoder.swift', '~> 0.6'
  pod 'MapboxNavigation', '~> 0.4.0'
  pod 'MapboxDirections.swift', '~> 0.9'

  #Authentication libraries
  #pod 'FirebaseUI/Twitter'

  pod 'FacebookLogin'
  pod 'FirebaseUI/Phone'

  # Only pull in FirebaseUI Auth features
  pod 'FirebaseUI/Auth', '~> 4.0'

  # Only pull in Facebook login features
  pod 'FirebaseUI/Facebook', '~> 4.0'
  pod 'FBSDKLoginKit' 

  # Only pull in Google login features
  pod 'FirebaseUI/Google', '~> 4.0'

  target 'FriendFinderTests' do
    inherit! :search_paths
    # Pods for testing
  end


end
